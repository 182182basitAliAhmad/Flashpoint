<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.asdevelopers.flashpoint.activity.DeckActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:paddingTop="15dp"
        android:background="@drawable/home_gradient_maths"
        android:id="@+id/card_front_text_view"
        android:text=""
        style="@style/viewParent.headerText.HomeCardTitle"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:paddingTop="10dp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/home_gradient_maths"
        android:id="@+id/card_back_text_view"
        android:text=""
        style="@style/viewParent.headerText.homeCardContent"
        android:justificationMode="inter_word"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:alpha="0"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal"
        android:id="@+id/control_buttons">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/editFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"

            android:contentDescription="Edit"
            android:outlineAmbientShadowColor="@android:color/transparent"
            android:outlineSpotShadowColor="@android:color/transparent"
            android:src="@android:drawable/ic_menu_edit"
            android:tint="#FFFFFF"
            app:borderWidth="0dp"
            app:fabSize="mini" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/deleteFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"

            android:contentDescription="Delete"
            android:outlineAmbientShadowColor="@android:color/transparent"
            android:outlineSpotShadowColor="@android:color/transparent"
            android:src="@android:drawable/ic_menu_delete"
            android:tint="#FFFFFF"
            app:borderWidth="0dp"
            app:fabSize="mini" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
